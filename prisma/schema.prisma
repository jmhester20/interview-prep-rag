generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PrepPack {
  id        String   @id @default(cuid())
  company   String
  role      String
  createdAt DateTime @default(now())

  documents Document[]
}

model Document {
  id         String       @id @default(cuid())
  prepPackId String
  type       DocumentType
  filename   String?
  text       String
  createdAt  DateTime     @default(now())

  prepPack PrepPack @relation(fields: [prepPackId], references: [id], onDelete: Cascade)

  @@index([prepPackId])
}

enum DocumentType {
  RESUME
  JOB_POST
  NOTES
}
